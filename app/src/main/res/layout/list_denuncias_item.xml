<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/denuncia_card"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/card_background">

    <TextView
        android:id="@+id/titulo_denuncia_item"
        android:layout_width="338dp"
        android:layout_height="37dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="38dp"
        android:text="@string/titulo_denuncia_card"
        android:textColor="#888888"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tipo_denuncia_item"
        android:layout_width="224dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:textColor="#50555C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="@+id/titulo_denuncia_item"
        app:layout_constraintTop_toBottomOf="@+id/titulo_denuncia_item" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/ultima_modificacion"
        android:textColor="#616161"
        app:layout_constraintStart_toStartOf="@+id/tipo_denuncia_item"
        app:layout_constraintTop_toBottomOf="@+id/tipo_denuncia_item" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:text="@string/estado"
        android:textColor="#616161"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/date_modif_denuncia_item"
        app:layout_constraintTop_toBottomOf="@+id/date_modif_denuncia_item"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/date_modif_denuncia_item"
        android:layout_width="150dp"
        android:layout_height="21dp"
        android:layout_marginEnd="80dp"
        android:textColor="#616161"
        app:layout_constraintEnd_toStartOf="@+id/imagen_denuncia_item"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <TextView
        android:id="@+id/estado_denuncia_item"
        android:layout_width="93dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView22" />

    <ImageView
        android:id="@+id/imagen_denuncia_item"
        android:layout_width="109dp"
        android:layout_height="84dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>