<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#032457"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient android:angle="90"
                android:endColor="#A491FA"
                android:startColor="#5262F3"
                android:type="linear" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
</layer-list>
